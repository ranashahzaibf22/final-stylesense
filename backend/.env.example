# Backend Environment Variables
# Copy this file to .env and configure for your environment

# MongoDB connection string
# Production example (do not commit actual credentials):
# MONGODB_URI=mongodb+srv://f22ba010_db_user:ZweEcxvRyrbbkXRi@stylesense.xrrdqbh.mongodb.net/?appName=stylesense
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/stylesense

# Hugging Face API key for AI models (VTON-HD, transformers)
# Production example: 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
HF_API_KEY=your_huggingface_api_key_here

# OpenWeatherMap API key for weather-based outfit suggestions
# Production example: 5ddde6ae3ebda98578aa3f72b7a4813f
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Flask secret key for sessions
FLASK_SECRET_KEY=supersecretkey123

# Flask debug mode (set to False in production)
FLASK_DEBUG=False

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# GPU usage for ML models (set to True if GPU is available)
USE_GPU=False

# Port for Flask application
PORT=5000

# Frontend Environment Variables (create frontend/.env)
# REACT_APP_API_URL=http://localhost:5000/api
