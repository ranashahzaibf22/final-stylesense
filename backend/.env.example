# Backend Environment Variables

# MongoDB connection string
# Replace <username>, <password>, and cluster details with your MongoDB Atlas credentials
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/stylesense

# Hugging Face API key for AI models (optional, for advanced features)
HF_API_KEY=your_huggingface_api_key_here

# Weather API key (optional, for weather-based outfit suggestions)
WEATHER_API_KEY=your_openweathermap_api_key_here

# Flask secret key for sessions
FLASK_SECRET_KEY=supersecretkey123

# Flask debug mode (set to False in production)
FLASK_DEBUG=False

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# GPU usage for ML models (set to True if GPU is available)
USE_GPU=False

# Port for Flask application
PORT=5000

# Frontend Environment Variables (create frontend/.env)
# REACT_APP_API_URL=http://localhost:5000/api
