# ============================================================
# APPLICATION SETTINGS
# ============================================================
# Port for the Flask application (Railway sets this automatically)
PORT=5000

# GPU usage for ML models (set to False on Railway free tier)
USE_GPU=False

# Maximum upload file size in bytes (16MB = 16777216 bytes)
MAX_UPLOAD_SIZE=16777216

# Upload directory for temporary files
UPLOAD_FOLDER=/tmp/uploads

# Temporary file retention time in seconds (1 hour = 3600 seconds)
TEMP_FILE_RETENTION=3600

# ============================================================
# RATE LIMITING
# ============================================================
# Rate limit per hour per IP
RATE_LIMIT_PER_HOUR=50

# Rate limit per day per IP
RATE_LIMIT_PER_DAY=200

# ============================================================
# LOGGING
# ============================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

